version: '2' 

services: 
   drupal:
	  image: drupal
	  ports:
	    - '8030:80'
    volumes:
	    - drupal-modules:/var/www/html/modules
      - drupal-profiles:/var/www/html/profiles
      - drupal-themes:/var/www/html/themes
   postgres:
	  image: postgres
	  environment:
	    - POSTGRES_PASSWORD=password

volumes:
  - drupal-modules:
  - drupal-profiles:
  - drupal-themes:
